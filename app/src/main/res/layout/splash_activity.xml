<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/icon_login">

    <com.videogo.ui.cameralist.CountDownView
        android:id="@+id/count_down_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:cd_animator_time="5"
        app:cd_animator_time_unit="S"
        app:cd_arc_color="#ffffff"
        app:cd_arc_width="2dp"
        app:cd_bg_color="#6eb8e7"
        app:cd_circle_radius="20dp"
        app:cd_location="top"
        app:cd_retreat_type="forward"
        app:cd_text_color="#ffffff"
        app:cd_text_size="14sp" />


    <EditText
        android:id="@+id/et_login_username"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="120dp"
        />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        />


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="116dp"
            android:layout_height="45dp"
            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="116dp"
            android:layout_height="46dp"
            android:layout_marginLeft="31dp"
            />

    </LinearLayout>

</LinearLayout>